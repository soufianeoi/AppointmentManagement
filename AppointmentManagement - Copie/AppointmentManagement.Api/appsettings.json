{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=AppointmentManagementDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "AppSettings": {
    "AppName": "AppointmentManagement",
    "AppVersion": "1.0.0",
    "CorsAllowedOrigins": "http://localhost:3000,https://localhost:3001"
  },
  "HealthChecks": {
    "Timeout": 30,
    "Interval": 60
  },
  "Features": {
    "EnableSwagger": true,
    "EnableDetailedErrors": false,
    "SeedSampleData": false,
    "UseInMemoryDatabase": false,
    "AutoMigrateDatabase": false
  },
  "ExternalServices": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "EmailFrom": "noreply@appointmentmanagement.com"
  }
}
